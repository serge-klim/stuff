{
    "version": 3,
    "configurePresets": [
        {
          "name": "windows-base",
          "hidden": true,
          "generator": "Ninja",
          "binaryDir": "${sourceDir}/out/build/${presetName}",
          "installDir": "${sourceDir}/out/install/${presetName}",
          "cacheVariables": {
            "MAKE_SHIM": "ON",
            "PKG_CONFIG_EXECUTABLE": "C:/toolz/pkgconf/pkgconf.exe",
            "Boost_DIR": "c:/libz/boost-1_84/lib/cmake/Boost-1.84.0",
            "benchmark_DIR": "c:/libz/benchmark/lib/cmake/benchmark",
            "toolz_DIR": "${sourceDir}/../tools/project"
          },
          "condition": {
              "type": "equals",
              "lhs": "${hostSystemName}",
              "rhs": "Windows"
          }
        },
        {
            "name": "windows-base-msvc",
            "hidden": true,
            "inherits": "windows-base",
          "cacheVariables": {
            "CMAKE_C_COMPILER": "cl.exe",
            "CMAKE_CXX_COMPILER": "cl.exe"
          }
        },
        {
            "name": "windows-base-clang",
            "hidden": true,
            "inherits": "windows-base",
          "cacheVariables": {
            "CMAKE_C_COMPILER": "C:/toolz/llvm/bin/clang-cl.exe",
            "CMAKE_CXX_COMPILER": "C:/toolz/llvm/bin/clang-cl.exe",
            "Boost_COMPILER": "vc143"
          }      
        },        
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base-msvc",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-winx64-debug",
            "displayName": "Clang x64 Debug",
            "inherits": "windows-base-clang",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-winx64-release",
            "displayName": "Clang x64 Release",
            "inherits": "windows-base-clang",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-winx64-prof",
            "displayName": "Clang x64 Profile",
            "inherits": "windows-base-clang",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base-msvc",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
